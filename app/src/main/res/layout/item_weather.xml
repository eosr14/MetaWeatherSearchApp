<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:background="@drawable/shape_item_list">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_local"
            style="@style/WeatherTextHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_item_text"
            android:gravity="center"
            android:text="로컬1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_today_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_orange_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="4.5"
            app:layout_constraintLeft_toRightOf="@id/textview_local"
            app:layout_constraintRight_toLeftOf="@id/view_tomorrow_background"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_tomorrow_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/holo_red_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="4.5"
            app:layout_constraintLeft_toRightOf="@id/view_today_background"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
