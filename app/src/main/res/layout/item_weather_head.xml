<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_item_header">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_local"
            style="@style/WeatherTextHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_item_text"
            android:text="@string/main_weather_local"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_today"
            style="@style/WeatherTextHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/main_weather_today"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintLeft_toRightOf="@id/textview_local"
            app:layout_constraintRight_toLeftOf="@id/textview_tomorrow"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_tomorrow"
            style="@style/WeatherTextHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_item_text"
            android:text="@string/main_weather_tomorrow"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintLeft_toRightOf="@id/textview_today"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>